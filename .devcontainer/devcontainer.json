{
    "name": "AVR Development Container",
    "dockerFile": "Dockerfile",
    "context": "..",  // context is root of the repo
    "workspaceFolder": "/workspace",
    "mounts": [
        "source=${localWorkspaceFolder}/src,target=/workspace/src,type=bind" // Mount src to /workspace/src
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-vscode.cpptools", // C/C++ support
        "ms-vscode.makefile-tools" // Makefile support
    ]
}